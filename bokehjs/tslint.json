{
  "rules": {
    "arrow-return-shorthand": true,
    "prefer-const": [true, {"destructuring": "all"}],
    "trailing-comma": [true, {
      "multiline": {
        "objects": "always",
        "arrays": "always",
        "functions": "always",
        "typeLiterals": "ignore"
      },
      "singleline": {
        "objects": "never",
        "arrays": "ignore",
        "functions": "never",
        "typeLiterals": "never"
      },
      "esSpecCompliant": true
    }],
    "ban-types": [true,
      ["Number", "Use 'number' instead."],
      ["String", "Use 'string' instead."],
      ["Boolean", "Use 'boolean' instead."],
      ["Array<.*>", "Use 'T[]' instead."]
    ],
    "object-literal-key-quotes": [true, "as-needed"],
    "no-construct": true,
    "no-var-keyword": true,
    "no-string-throw": true,
    "no-invalid-template-strings": true,
    "return-type": true,
    "no-debugger": true
  }
}
