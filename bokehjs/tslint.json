{
  "rules": {
    "arrow-return-shorthand": true,
    "prefer-const": [true, {"destructuring": "all"}],
    "trailing-comma": [true, {
      "multiline": {
        "objects": "always",
        "arrays": "always",
        "functions": "always",
        "typeLiterals": "ignore"
      },
      "singleline": {
        "objects": "never",
        "arrays": "ignore",
        "functions": "never",
        "typeLiterals": "never"
      },
      "esSpecCompliant": true
    }]
  }
}
