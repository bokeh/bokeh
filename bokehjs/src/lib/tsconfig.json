{
  "compilerOptions": {
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noErrorTruncation": true,
    "noEmitOnError": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES5",
    "lib": ["es5", "dom", "es2015.core"],
    "declaration": true,
    "sourceMap": false,
    "importHelpers": true,
    "experimentalDecorators": true,
    "types": ["hammerjs", "googlemaps"],
    "baseUrl": "."
  },
  "include": ["./**/*.ts"]
}
